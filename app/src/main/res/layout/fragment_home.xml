<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="#FFFFFF">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/ic_flag_us"
                    android:id="@+id/local_currency_img"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />


                <TextView
                    android:text="USD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/local_currency_txt"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal">

                    <TextView
                        android:text="$"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/currency_symbol"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp" />



                    <TextView
                        android:text="2000.00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/currency_value"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp" />

                    <TextView
                        android:text="US Dollar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/currency_name"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/colorPrimaryLight"
                        android:textSize="12sp"
                        android:layout_marginTop="1dp" />




                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    app:srcCompat="@drawable/ic_calculator"
                    android:id="@+id/btn_calculator"
                    android:adjustViewBounds="true"
                    android:layout_height="28dp" />



            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <RelativeLayout
            android:id="@+id/panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="gone">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#696969"
                android:showDividers="beginning|middle|end"
                android:divider="@drawable/row_divider">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:showDividers="beginning|middle|end"
                    android:divider="@drawable/column_divider">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/calc_seven"
                        android:background="#FFFFFF">

                        <TextView
                            android:text="7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="24sp"
                            android:singleLine="true"
                            android:gravity="center" />

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/calc_eight"
                        android:background="#FFFFFF">

                        <TextView
                            android:text="8"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="24sp"
                            android:singleLine="true"
                            android:gravity="center" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/calc_nine"
                        android:background="#FFFFFF">
                        <TextView
                            android:text="9"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="24sp"
                            android:singleLine="true"
                            android:gravity="center" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/calc_clear"
                        android:background="#FFFFFF">
                        <TextView
                            android:text="C"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="24sp"
                            android:singleLine="true"
                            android:gravity="center" />

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/calc_backspace"
                        android:background="#FFFFFF">
                        <TextView
                            android:text="BC"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="24sp"
                            android:singleLine="true"
                            android:gravity="center" />

                    </LinearLayout>



                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:showDividers="beginning|middle|end"
                    android:divider="@drawable/column_divider">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/calc_four"
                        android:background="#FFFFFF">

                        <TextView
                            android:text="4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="24sp"
                            android:singleLine="true"
                            android:gravity="center" />

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/calc_five"
                        android:background="#FFFFFF">

                        <TextView
                            android:text="5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="24sp"
                            android:singleLine="true"
                            android:gravity="center" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/calc_six"
                        android:background="#FFFFFF">
                        <TextView
                            android:text="6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="24sp"
                            android:singleLine="true"
                            android:gravity="center" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/calc_multiply"
                        android:background="#FFFFFF">
                        <TextView
                            android:text="X"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="24sp"
                            android:singleLine="true"
                            android:gravity="center" />

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/calc_divide"
                        android:background="#FFFFFF">
                        <TextView
                            android:text="/"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="24sp"
                            android:singleLine="true"
                            android:gravity="center" />

                    </LinearLayout>



                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:showDividers="beginning|middle|end"
                    android:divider="@drawable/column_divider">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/calc_one"
                        android:background="#FFFFFF">

                        <TextView
                            android:text="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="24sp"
                            android:singleLine="true"
                            android:gravity="center" />

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/calc_two"
                        android:background="#FFFFFF">

                        <TextView
                            android:text="2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="24sp"
                            android:singleLine="true"
                            android:gravity="center" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/calc_three"
                        android:background="#FFFFFF">
                        <TextView
                            android:text="3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="24sp"
                            android:singleLine="true"
                            android:gravity="center" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/calc_plus"
                        android:background="#FFFFFF">
                        <TextView
                            android:text="+"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="24sp"
                            android:singleLine="true"
                            android:gravity="center" />

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/calc_minus"
                        android:background="#FFFFFF">
                        <TextView
                            android:text="-"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="24sp"
                            android:singleLine="true"
                            android:gravity="center" />

                    </LinearLayout>



                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:showDividers="beginning|middle|end"
                    android:divider="@drawable/column_divider">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/calc_one_p_zero"
                        android:background="#FFFFFF">

                        <TextView
                            android:text="1.0"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="24sp"
                            android:singleLine="true"
                            android:gravity="center" />

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/calc_zero"
                        android:background="#FFFFFF">

                        <TextView
                            android:text="0"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="24sp"
                            android:singleLine="true"
                            android:gravity="center" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/calc_point"
                        android:background="#FFFFFF">
                        <TextView
                            android:text="."
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="24sp"
                            android:singleLine="true"
                            android:gravity="center" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/calc_equals"
                        android:background="#FFFFFF">
                        <TextView
                            android:text="="
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="24sp"
                            android:singleLine="true"
                            android:gravity="center" />

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/calc_empty"
                        android:background="#FFFFFF">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="24sp"
                            android:singleLine="true"
                            android:gravity="center" />

                    </LinearLayout>



                </LinearLayout>



            </LinearLayout>

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="1dp"
            android:background="#FFFFFF"
            app:cardElevation="3dp"
            app:contentPadding="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-50dp" />

        </android.support.v7.widget.CardView>


    </LinearLayout>

</LinearLayout>