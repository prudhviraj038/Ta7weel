<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/logo"
            android:adjustViewBounds="false"
            android:src="@drawable/ic_cnbc" />

        <TextView
            android:text="CNBC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/news_ch_title"
            android:layout_weight="1"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:text="2 Hours Ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/news_time2"
            android:textColor="@color/colorPrimaryDark" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/news_title"
            android:layout_weight="1"
            android:text="Gold powers miners to send the FTSE100 to a new high"
            android:textSize="18sp"
            android:paddingRight="10dp"
            android:paddingLeft="12dp"
            android:paddingTop="2dp"
            android:paddingBottom="5dp"
            android:textColor="@color/colorPrimaryDark" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/news_img"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_news_sample" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/share_btn_item"
            android:adjustViewBounds="true"
            android:layout_height="30dp"
            android:src="@drawable/ic_share" />
    </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>